<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/week_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/line">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="一"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="二"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="三"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="四"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="五"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="六"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_content"
            android:gravity="center"
            android:text="日"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/font_content"
                    android:textSize="@dimen/font_content"
                    android:text="仅保留最近六个月交易数据"/>

                    <LinearLayout
                        android:id="@+id/firt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/first_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/second_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/second_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:id="@+id/third_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/third_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/fourth_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fourth_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:id="@+id/fifth_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fifth_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:id="@+id/sixth_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/sixth_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:id="@+id/seventh_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/seventh_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>