<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:textSize="@dimen/font_actionbar_title"
        android:textColor="@color/font_title_black"
        android:background="@color/white"
        android:text="服务中心"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:id="@+id/rl_service"
        style="@style/ContentStyle"
        android:divider="@drawable/line"
        android:orientation="vertical"
        android:showDividers="middle">
        <ImageView
            android:id="@+id/iv_service"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_service"/>
        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_service"
            android:textSize="@dimen/font_title"
            android:textColor="@color/font_title"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:text="@string/my_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_title"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/font_small"
            android:textColor="@color/font_des"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_service"
            android:layout_below="@+id/tv_service" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line"/>
    <RelativeLayout
        android:id="@+id/rl_inform"
        style="@style/ContentStyle"
        android:divider="@drawable/line"
        android:orientation="vertical"
        android:showDividers="middle">
        <ImageView
            android:id="@+id/iv_inform"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_inform"/>
        <TextView
            android:id="@+id/tv_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_inform"
            android:textSize="@dimen/font_title"
            android:textColor="@color/font_title"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:text="@string/station_inform"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_content"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/font_small"
            android:textColor="@color/font_des"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_inform"
            android:layout_below="@+id/tv_inform" />
    </RelativeLayout>

</LinearLayout>