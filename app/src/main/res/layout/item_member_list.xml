<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_content"
            android:textColor="@color/font_content"
            android:text="小志"/>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_delete"/>

        <TextView
            android:id="@+id/tv_member_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_content"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/font_des"
            android:text="职位："/>

        <TextView
            android:id="@+id/tv_member_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_content"
            android:layout_toRightOf="@+id/tv_member_position_title"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/font_des"
            android:text="收银员" />

        <TextView
            android:id="@+id/tv_store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_content"
            android:layout_below="@+id/tv_member_position_title"
            android:textColor="@color/font_des"
            android:text="所属门店："/>

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_content"
            android:layout_toRightOf="@+id/tv_store_title"
            android:layout_below="@+id/tv_member_position_title"
            android:textColor="@color/font_des"
            android:text="收银员" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:id="@+id/edit_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity = "center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/ic_member_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/font_content"
            android:layout_marginLeft="10dp"
            android:text="编辑"/>
    </LinearLayout>

</LinearLayout>